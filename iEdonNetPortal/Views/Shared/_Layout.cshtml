<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - iEdon Net Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
    <nav class="navbar navbar-light bg-light fixed-top navbar-expand-sm">
        <div class="container">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">iEdon 网络认证系统</a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Accounts" asp-action="Index">帐户管理</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="AuthMacs" asp-action="Index">认证MAC表</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Logs" asp-action="Index">日志管理</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">关于</a></li>
                </ul>
                <ul class="nav navbar-nav ml-auto">
                    @if (@ViewData["LoggedIn"] != null)
                    {
                        <li class="nav-item"><a class="nav-link">@ViewData["LoggedIn"]</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Logout">登出</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">登录</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <footer class="footer">
        <div class="container">
            <span class="text-muted">&copy; 2012-2019 iEdon Net Portal</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
